{
    "manifest_version": 2,
    "name": "Excelsecu Client",
    "description": "Connect your Excelsecu Wallet.",
    "version": "0.0.1",
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "icons": { 
        "16": "icon16.png",             
        "48": "icon48.png",            
        "128": "icon128.png" 
    },
    "permissions": [
        "https://*.excelseu.com/*",
        "storage",
        "unlimitedStorage",
        "hid",
        "usb",
         {
             "usbDevices": [
                  // Excelsecu
                  {
                    "vendorId": 7848,   // 0x1ea8
                    "productId": 49153  // 0xc001
                  }
                 // Trezor
//                  {
//                     "vendorId": 21324,
//                     "productId": 1
//                 }
             ]
         }
    ]
//    "optional_permissions": [ {"usbDevices": [{"vendorId": 7848, "productId": 49153}]}]
}