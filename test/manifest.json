{
    "manifest_version": 2,
    "name": "Excelsecu Client SDK",
    "description": "Connect your Excelsecu Wallet.",
    "version": "0.0.3",
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "icons": { 
        "16": "icon16.png",             
        "48": "icon48.png",            
        "128": "icon128.png" 
    },
    "permissions": [
        "https://*.excelseu.com/*",
        "https://*.blockchain.info/*",
        "https://*.blockchain.com/*",
        "https://*.etherscan.io/*",
        "storage",
        "unlimitedStorage",
        "hid",
        "usb",
        {
            "usbDevices": [
                {
                 "vendorId": 7848,   // 0x1ea8
                 "productId": 49413  // 0xc105
                },
                {
                    "vendorId": 7848,   // 0x1ea8
                    "productId": 49204  // 0xc034
                },
                {
                    "vendorId": 7848,   // 0x1ea8
                    "productId": 49206  // 0xc036
                }
            ]
        }
    ]
}